<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="56dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Druppelsnelheid"
        android:id="@+id/head"
        android:layout_gravity="center_horizontal|top"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Druppels per minuut"
        android:id="@+id/head_20"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Millimeters"
        android:id="@+id/millimeters_20"
        android:layout_gravity="left|top"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etInvoermilliliters"
        android:layout_gravity="right|top"
        android:layout_marginTop="60dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Uren"
        android:id="@+id/uren_20"
        android:layout_gravity="left|top"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etInvoeruren"
        android:layout_gravity="right|top"
        android:layout_marginTop="110dp"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bereken"
        android:id="@+id/button_20"
        android:layout_gravity="left|top"
        android:layout_marginTop="150dp"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bij 20 druppels per ml"
        android:id="@+id/textView6"
        android:layout_gravity="left|top"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bij 18 druppels per ml"
        android:id="@+id/textView9"
        android:layout_gravity="left|top"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="177dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/uitkomstdruppelsperminuut20"
        android:layout_gravity="left|top"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="150dp" />

    <TextView
        android:layout_width="192dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/uitkomstdruppelsperminuut18"
        android:layout_gravity="left|top"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="150dp" />

    <TextView
        android:layout_width="192dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/uitkomstdruppelsperminuut16"
        android:layout_gravity="left|top"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bij 16 druppels per ml"
        android:id="@+id/textView11"
        android:layout_gravity="left|top"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="5dp" />
</FrameLayout>
